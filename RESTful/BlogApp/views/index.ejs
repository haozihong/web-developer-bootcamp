<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">Blog Index</div>
	
	<div class="ui divided items top attached segment">
		<% blogs.forEach(blog => { %>
			<div class="item">
				<div class="image">
					<img src="<%= blog.image %>">
				</div>
				
				<div class="content">
					<a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
					<div class="meta">
						<span><%= blog.create.toDateString() %></span>
					</div>
					<div class="discription">
						<p><%- blog.body.substring(0,100) %> ...</p>
					</div>
					<div class="extra">
						<a class="ui basic violet button" href="/blogs/<%= blog._id %>">
							Read More
							<i class="right chevron icon"></i>
						</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>