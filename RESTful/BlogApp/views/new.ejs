<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">New Blog</div>

	<form action="/blogs" method="POST" class="ui form">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="url" name="blog[image]" placeholder="image url">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" required></textarea>
		</div>
		<button class="ui violet basic large button" type="submit">Post!</button>
	</form>
</div>

<%- include("partials/footer") %>