<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>

	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="url" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" required><%= blog.body %></textarea>
		</div>
		<button class="ui violet basic large button" type="submit">Edit</button>
	</form>
</div>

<%- include("partials/footer") %>